                <Border Tag="Combat\ConfigWiz.xaml"/>
            </TabItem>
            <TabItem Header="巫医" Foreground="{DynamicResource TextBrush}">
                <Border Tag="Combat\ConfigWD.xaml"/>
            </TabItem>
